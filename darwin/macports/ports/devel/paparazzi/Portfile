# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
# $Id$
PortSystem          1.0
name                paparazzi
version             0.1
categories          devel
platforms           darwin
maintainers         nomaintainer
description         Paparazzi source code
long_description    The requirements for building and developing with Paparazzi.
homepage            http://paparazzi.enac.fr/Wiki
depends_lib         port:paparazzi-tools
fetch.type          git
git.url             git://github.com/paparazzi/paparazzi.git
use_configure       no

# We want paparazzi installed in the users home directory
# i.e. ~/paparazzi
destroot.violate_mtree  yes

set prefix          /Users/Shared
build.args
build.target
use_parallel_build  no
pre-destroot {
        file mkdir "${destroot}/Users"
        file mkdir "${destroot}/Users/Shared"
}

destroot {
    file copy ${workpath}/paparazzi-${version} ${destroot}${prefix}/paparazzi
}

