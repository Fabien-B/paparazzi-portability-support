PortSystem              1.0
name                    arm-none-eabi-gcc-linaro-boot
version                 4.5-2010.11-1
categories              cross devel
platforms               darwin
maintainers             nomaintainer
description             GCC Linaro
long_description        GCC Linaro
master_sites            http://launchpad.net/gcc-linaro/4.5/4.5-2010.11-0/+download/
distfiles               gcc-linaro-${version}.tar.bz2
worksrcdir              gcc-linaro-${version}
use_bzip2               yes
checksums               md5     9e18a60d2c5ae4f3338814aabf80bb90 \
                        sha1    2e66bdfdf3c847e67bfca2c5ad2645eb41276167 \
                        rmd160  9a709d16f16e1a0fb10ef176c06b8f0b677e4533
# All cross ports violate the mtree layout.
destroot.violate_mtree  yes
depends_lib-append      port:gmp \
                        port:mpfr \
                        port:mpc \
                        port:libiconv \
                        port:arm-none-eabi-binutils
configure.args          --target=arm-none-eabi \
                        --prefix=${prefix} \
                        --enable-interwork \
                        --enable-multilib \
                        --enable-languages="c" \
                        --with-newlib \
                        --without-headers \
                        --disable-shared \
                        --with-gnu-as \
                        --with-gnu-ld \
                        --disable-nls \
                        --disable-werror \
                        --with-system-zlib \
                        --with-gmp=${prefix} \
                        --with-mpfr=${prefix} \
                        --with-mpc=${prefix} \
                        --with-libiconv-prefix=${prefix}
build.target            all-gcc
destroot.target         install-gcc
