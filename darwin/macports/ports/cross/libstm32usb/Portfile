# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
# $Id$
PortSystem              1.0
set targetarch          arm-none-eabi
set prefixorig          ${prefix}
set prefix              ${prefix}/${targetarch}
name                    libstm32usb
version                 master
categories              cross devel
platforms               darwin
maintainers             nomaintainer
description             libstm32
long_description        libstm32
fetch.type              git
git.url                 git://git.open-bldc.org/libstm32usb.git

worksrcdir              ${name}
use_configure           no
use_parallel_build      no
depends_lib             port:${targetarch}-gcc-linaro
set environment         [list PATH="${prefix}/${targetarch}/bin:${prefix}/bin:$env(PATH)"]
build.env               ${environment}
build.args              arch_prefix=${targetarch} prefix=${prefix} ${environment}

# All cross ports violate the mtree layout.
destroot.violate_mtree  yes
pre-destroot {
        file mkdir "${destroot}${prefix}/${targetarch}/lib"
}
destroot.args           arch_prefix=${targetarch} install_dir=${destroot}${prefix}/${targetarch} install

